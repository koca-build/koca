pkgname="koca"
pkgver=0.1.0
pkgrel=1
pkgdesc='A modern, universal, and system-native package manager'
arch=('any')

build() {
  echo "echo 'The Koca example was built!'" > koca-example.sh
}

package() {
  install -Dm 755 ./koca-example.sh "${pkgdir}/usr/bin/koca-example"
}
